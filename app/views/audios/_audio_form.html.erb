<%= form_for audio do |f| %>
  <%= check_for_errors audio %>
  <fieldset>
	<legend><%= title %></legend>
	<ol>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</li>

		<li>
			<%= f.label :soundcloud_id, "Souncloud ID" %>
			<%= f.text_field :soundcloud_id, placeholder: "012345" %>
		</li>

		<li>
			<%= f.label :description %>
			<%= f.text_area :description, size: "30x5" %>
		</li>
	</ol>
  </fieldset>
  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
