<%= form_for @score, html: { class: "big edit_score" } do |f| %>
	<fieldset>
		<legend>Crop file for Thumbnail</legend>
		<%= image_tag @score.asset.url(:full), class: 'cropBox' %>
		<% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
			<%= f.hidden_field attribute, id: attribute%>
		<% end %>
	</fieldset>
	<fieldset>
		<%= f.submit "Crop" %> <%= link_to "Skip", scores_path, id: "skip-crop" %>
	</fieldset>
<% end %>