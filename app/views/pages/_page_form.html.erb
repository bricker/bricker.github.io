<%= form_for page, html: { class: "big" } do |f| %>
  <%= check_for_errors page %>
  <fieldset>
	<legend><%= title %></legend>
	<ol>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</li>
		<li>
			<%= f.label :text_id, "Text ID" %>
			<%= f.text_field :text_id, disabled: !page.new_record? %>
		</li>
		<li>
			<%= f.text_area :content, class: 'ckeditor' %>
		</li>
	</ol>
  </fieldset>
  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
